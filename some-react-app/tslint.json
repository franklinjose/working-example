{
  "extends": ["tslint:recommended", "tslint-etc", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "array-type": [true, "array-simple"],
    "ban": [true, "useLayoutEffect"],
    "ban-ts-ignore": true,
    "deprecation": true,
    "import-blacklist": [
      true,
      "emotion",
      "lodash",
      "lodash/chain",
      "react-use",
      ["\\.\\."],
      ["^jest\\/.*"],
      ["^test\\/.*"]
    ],
    "interface-name": false,
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^import",
        "limit": 120
      }
    ],
    "no-any": [
      true,
      {
        "ignore-rest-args": true
      }
    ],
    "no-const-enum": true,
    "no-duplicate-imports": true,
    "no-inferrable-types": true,
    "no-namespace": false,
    "no-parameter-reassignment": true,
    "no-restricted-globals": [true, "$", "XMLHttpRequest", "event", "jQuery", "length", "name"],
    "object-literal-sort-keys": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "module-source-path": "full",
        "named-imports-order": "case-insensitive"
      }
    ],
    "space-within-parens": [true, 0],
    "variable-name": [true, "allow-leading-underscore"]
  }
}
